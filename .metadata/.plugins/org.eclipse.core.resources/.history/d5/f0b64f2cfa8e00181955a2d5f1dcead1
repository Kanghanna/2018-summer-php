<?php

echo "점수에 따른 학점 판별<hr/>";
$score = 66;
$class;

echo "입력된 점수 : $score<br>";

switch($score / 10){
case 0 : case 1 : case 2 : case 3 : case 4 : case 5 :
    $class = "F";
}

if($score >= 90)
    $class = "A";
else if($score >= 80)
    $class = "B";
else if($score >= 70)
    $class = "C";
else if($score >= 60)
    $class = "D";
else if($score >= 0)
    $class = "F";

    echo "학점 : $class";
    
    if($score >= 60 && $score % 10 >= 5 || $score == 100)
    echo "+";

?>